# Kafka Configuration
KAFKA_BOOTSTRAP_SERVERS=localhost:9092
KAFKA_CONSUMER_GROUP=streaming-consumers

# PostgreSQL Configuration
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=streaming_db
POSTGRES_USER=streaming_user
POSTGRES_PASSWORD=streaming_pass

# InfluxDB Configuration
INFLUXDB_URL=http://localhost:8086
INFLUXDB_TOKEN=my-super-secret-auth-token
INFLUXDB_ORG=streaming-org
INFLUXDB_BUCKET=metrics

# Monitoring
PROMETHEUS_PORT=8000
LOG_LEVEL=INFO

# Feature Flags
ENABLE_SENSOR_PRODUCER=true
ENABLE_ECOMMERCE_PRODUCER=true
ENABLE_ANALYTICS_CONSUMER=true
ENABLE_ALERT_CONSUMER=true
